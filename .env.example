# =============================================================================
# PPDB SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# PETUNJUK:
# 1. Copy file ini menjadi .env
# 2. Isi semua value yang dibutuhkan
# 3. JANGAN commit file .env ke Git
# =============================================================================

# -----------------------------------------------------------------------------
# DJANGO CORE SETTINGS
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=your-secret-key-here-min-50-characters-random-string
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.development

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=ppdb_system_db
DB_USER=ppdb_admin
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# CSRF
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Session Security
SESSION_COOKIE_SECURE=False  # Set True di production dengan HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CORS (jika ada frontend terpisah)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# FILE UPLOAD CONFIGURATION
# -----------------------------------------------------------------------------
# Local Storage (Development)
MEDIA_ROOT=/home/user/ppdb_system/media
MEDIA_URL=/media/

# Maximum Upload Size (dalam bytes)
MAX_UPLOAD_SIZE=5242880  # 5MB
ALLOWED_DOCUMENT_TYPES=pdf,jpg,jpeg,png

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY - MIDTRANS
# -----------------------------------------------------------------------------
# Get credentials dari: https://dashboard.midtrans.com
MIDTRANS_IS_PRODUCTION=False
MIDTRANS_SERVER_KEY=SB-Mid-server-XXXXXXXXXXXXXXXXXXXX
MIDTRANS_CLIENT_KEY=SB-Mid-client-XXXXXXXXXXXXXXXXXXXX
MIDTRANS_MERCHANT_ID=G000000000

# Webhook Security
MIDTRANS_WEBHOOK_SECRET=your-webhook-secret-key

# -----------------------------------------------------------------------------
# PAYMENT CONFIGURATION
# -----------------------------------------------------------------------------
# Biaya Pendaftaran (dalam Rupiah)
REGISTRATION_FEE=500000
PAYMENT_EXPIRY_HOURS=24

# Nama Penerima di VA
PAYMENT_MERCHANT_NAME=Yayasan Pendidikan XYZ

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (untuk notifikasi)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=PPDB System <noreply@ppdb.example.com>

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=/var/log/ppdb_system

# -----------------------------------------------------------------------------
# REDIS (untuk Celery - optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# SENTRY (Error Monitoring - Production)
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development